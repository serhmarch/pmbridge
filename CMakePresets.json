{
    "version": 3,
    "configurePresets": [
        {
            "name": "Config-Base",
            "displayName": "Config Base",
            "hidden": true
        },
        {
            "name": "Win-Base",
            "inherits": "Config-Base",
            "hidden": true,
            "binaryDir": "$env{USERPROFILE}/tmp/cmake/pmbridge/bin",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "Win64-MSVC",
            "description": "Using compilers for Visual Studio 17 2022 (x64 architecture)",
            "inherits": "Win-Base",
            "generator": "Visual Studio 17 2022",
            "toolset": "host=x64",
            "architecture": "x64",
            "binaryDir": "$env{USERPROFILE}/tmp/cmake/pmbridge/bin/Win64",
            "cacheVariables": {
                "CMAKE_PREFIX_PATH": "C:/Qt/5.15.2/msvc2019_64",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "PMB_TESTS_ENABLED": "ON"
            }
        },
        {
            "name": "Win32-MSVC",
            "description": "Using compilers for Visual Studio 17 2022 (x64_x86 architecture)",
            "inherits": "Win-Base",
            "generator": "Visual Studio 17 2022",
            "toolset": "host=x64",
            "architecture": "win32",
            "binaryDir": "$env{USERPROFILE}/tmp/cmake/pmbridge/bin/Win32",
            "cacheVariables": {
                "CMAKE_PREFIX_PATH": "C:/Qt/5.15.2/msvc2019",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "Linux-Base",
            "description": "Using compilers: C = /usr/bin/gcc, CXX = /usr/bin/g++",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "Linux-Debug",
            "inherits": "Linux-Base",
            "binaryDir": "$env{HOME}/tmp/cmake/pmbridge/Linux/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Linux-Release",
            "inherits": "Linux-Base",
            "binaryDir": "$env{HOME}/tmp/cmake/pmbridge/Linux/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Build-Base",
            "displayName": "Build Base",
            "hidden": true,
            "jobs": 10
        },
        {
            "name": "Win64-MSVC-Debug",
            "inherits": "Build-Base",
            "configurePreset": "Win64-MSVC",
            "configuration": "Debug"
        },
        {
            "name": "Win64-MSVC-Release",
            "inherits": "Build-Base",
            "configurePreset": "Win64-MSVC",
            "configuration": "Release"
        },
        {
            "name": "Win32-MSVC-Debug",
            "inherits": "Build-Base",
            "configurePreset": "Win32-MSVC",
            "configuration": "Debug"
        },
        {
            "name": "Win32-MSVC-Release",
            "inherits": "Build-Base",
            "configurePreset": "Win32-MSVC",
            "configuration": "Release"
        },
        {
            "name": "Linux-Debug",
            "inherits": "Build-Base",
            "configurePreset": "Linux-Debug",
            "configuration": "Debug"
        },
        {
            "name": "Linux-Release",
            "inherits": "Build-Base",
            "configurePreset": "Linux-Release",
            "configuration": "Release"
        }
    ],
     "testPresets": [
        {
            "name": "Win64-Tests-Debug",
            "configurePreset": "Win64-MSVC",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "Win32-Tests-Debug",
            "configurePreset": "Win32-MSVC",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "Linux-Tests-Debug",
            "configurePreset": "Linux-Debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        }
    ]
}